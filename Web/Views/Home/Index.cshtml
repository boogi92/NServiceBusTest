<script>
    function onUpdate() {
        $('.mvc-grid').mvcgrid({
            requestType: 'get', // defaults to get
            reload: true
        });
    };

    function onAdd() {
        $.ajax({
            type: "POST",
            url: '@Url.Action("Generate", "Home")',
            contentType: false,
            processData: false,
            success: function () { onUpdate(); }
        });
    }
</script>

<a href="javascript:void(0)" date-hidear="false" onclick="onUpdate()" class="btn btn-success">Update</a>
<a href="/home/Download" date-hidear="false" class="btn btn-success">Download report</a>
<a href="javascript:void(0)" date-hidear="false" onclick="onAdd()"  class="btn btn-success">Get one</a>
